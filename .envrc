# Use Nix flake for development environment
if ! command -v nix &> /dev/null; then
  echo "Nix is not installed. Please install Nix first."
  exit 1
fi

# Use flake.nix if available, otherwise use nix/default.nix
if [ -f flake.nix ]; then
  use flake
else
  if [ -f nix/default.nix ]; then
    use nix
  fi
fi

