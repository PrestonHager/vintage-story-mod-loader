{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "main-capabilities",
  "description": "Main application capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-create",
    "fs:scope-all",
    "shell:allow-open"
  ]
}

